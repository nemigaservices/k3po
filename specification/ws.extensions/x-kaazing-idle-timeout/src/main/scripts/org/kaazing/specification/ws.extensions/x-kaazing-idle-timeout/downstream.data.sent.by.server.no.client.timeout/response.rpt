accept http://localhost:8001/echo
accepted
connected

read method "GET"
read version "HTTP/1.1"
read header "Host" "localhost:8001"
read header "Upgrade" /(?i:websocket)/
read header "Connection" /(?i:Upgrade)/
read header "Sec-WebSocket-Key" /(?<key>[a-zA-Z0-9+\/=]{24})/
read header "Sec-WebSocket-Version" "13"
read header "Sec-WebSocket-Extensions" "x-kaazing-idle-timeout"

write status "101" "Switching Protocols"
write version "HTTP/1.1"
write header "Upgrade" "websocket"
write header "Connection" "Upgrade"
write header "Sec-WebSocket-Accept" ${ws:handshakeHash(key)}
write header "Sec-WebSocket-Extensions" "x-kaazing-idle-timeout; timeout=2000"

write notify HANDSHAKE_COMPLETE

# Write random data (but a valid ws frame) within the timeout frequency
################################################################
# Write second PING frame @ TICK_ONE within the timeout frequency
write await TICK_ONE
write [0x82 0x02 0x11 0x11]
################################################################
# Write second PING frame @ TICK_TWO within the timeout frequency
write await TICK_TWO
write [0x82 0x02 0x11 0x11]
################################################################
# Write second PING frame @ TICK_THREE within the timeout frequency
write await TICK_THREE
write [0x82 0x02 0x11 0x11]
################################################################

# Do clean close
read [0x88 0x80] [0..4]
write [0x88 0x00]

close
closed
