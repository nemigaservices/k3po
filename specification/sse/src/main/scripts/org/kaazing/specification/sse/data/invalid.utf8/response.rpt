property date "Mon, 1 Jan 2015 01:23:45 GMT"
# Use the following line with an EL function once issue https://github.com/k3po/k3po/issues/295
# is resolved. Until then, we will hardcode the usage of invalid UTF8.
# property dataWithInvalidUTF8 ${sse:randomBytesInvalidUTF8(10)}
property dataWithInvalidUTF8 [0x80 0x48 0x65 0x6c 0x6c 0x57 0x6f 0x72 0x6c 0x64]

accept tcp://localhost:8000
accepted
connected

read "GET /sse HTTP/1.1\r\n"
read "Host: localhost:8000\r\n"
read "Accept: text/event-stream\r\n"
read "\r\n"

write "HTTP/1.1 200 OK\r\n"
write "Content-Type: text/event-stream\r\n"
write "Cache-Control: no-cache\r\n"
write "Connection: keep-alive\r\n"
write "Date: " ${date} "\r\n"
write "\r\n"

write "event:e1\n"
write "data:" ${dataWithInvalidUTF8} "\n"
write "\n"
